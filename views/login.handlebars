<div class="container text-center pt-5" id="loginWidth">
    <h3>Log in using your existing OnTilt account.</h3>
    <h5>Don't have an OnTilt account? <span><a href="/signup"> Sign up.</a></span></h5>

    <form class="needs-validation" novalidate>

      
        <div class="form-row pt-5">
            <div class="col-md-6 mb-3">
            <label for="validationCustomEmail">Email</label>
            <div class="input-group">
                <input type="email" class="form-control" id="validationCustomEmail" aria-describedby="inputGroupPrepend"  required>
                <div class="invalid-feedback">
                Please enter in a valid email.
                </div>
            </div>
            </div>

            <div class="col-md-6 mb-3">
            <label for="inputPassword5">Password</label>
                <input type="password" id="inputPassword5" class="form-control" aria-describedby="passwordHelpBlock" required>
                <small id="passwordHelpBlock" class="form-text text-light">
                Your password must be 8-20 characters long, contain letters and numbers, and must not contain spaces, special characters, or emoji.
                </small>
            </div>
        </div>

        
        <div class="form-group row text-left">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">
            <div class="form-check">
            <input class="form-check-input" type="checkbox" id="gridCheck1">
            <label class="form-check-label" for="gridCheck1">
                Remember Me
            </label>
            </div>
        </div>
        </div>
        <div class="form-group row  text-center">
        <div class="col-sm-10">
            <a href="/dash" class="btn btn-primary px-4 mt-3">SUBMIT</a>
            <h6 id="forgotPWLink"><a href="#">Forgot password?</a></h6>
        </div>
        </div>
        </form>
</div>




{{#section 'scripts'}}
<script src="/js/signinValid.js"></script>
{{/section}}