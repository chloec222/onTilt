<div class="user-container shadow p-3 mb-5 bg-dark rounded-lg pt-5 blog">
  <div class="row">
    <div class="col">
      <h1 id="dashTitle">MAKE A BET</h1>
      <h6>Pick a team, make a bet and watch the game happen.</h6>
      <div class="container">
        <form>
          <div class="row">
            <div class="col">
              <label for="title">YOUR NAME</label>
              <input type="text" class="form-control" placeholder="Name">
            </div>
          </div>

          <div class="form-group">
            <label for="title">ENTER TEAM NAME</label>
            <input placeholder="Team Name " type="text" class="form-control" id="team">
            <br />
            <label for="body">ENTER BET AMOUNT</label>
            <input placeholder="$ " type="text" class="form-control" id="bet">

            <div class="form-group">

            </div>
            <br />
            <a href="/dash" class="btn btn-primary px-4 mt-3">SUBMIT</a>
          </div>
        </form>
      </div>
    </div>
  </div>


  <!-- user profile -->
  <div class="container" id="dashboard">
    <div class="row">
      <div class="col ">
        <div class="nav flex-column nav-pills mx-4" id="v-pills-tab" role="tablist" aria-orientation="vertical">

          <a class="nav-link btn btn-primary my-2 text-center" id="v-pills-profile-tab" data-toggle="pill"
            href="#v-pills-profile" role="tab" aria-controls="v-pills-profile" aria-selected="true">PROFILE</a>

          <a class="nav-link btn btn-primary my-2 text-center" id="v-pills-home-tab" data-toggle="pill"
            href="#v-pills-home" role="tab" aria-controls="v-pills-home" aria-selected="false">MY BIDS</a>

          <a class="nav-link btn btn-primary my-2 text-center" id="v-pills-settings-tab" data-toggle="pill"
            href="#v-pills-settings" role="tab" aria-controls="v-pills-settings" aria-selected="false">SETTINGS</a>
        </div>
      </div>

      <!-- tab content -->
      <div class="col-9">
        <div class="tab-content" id="v-pills-tabContent">

