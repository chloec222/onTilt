                <li class="list-group-item border-0">Username: johndoe123</li>
                <li class="list-group-item border-0">Email: johndoe123@gmail.cpm </li>
              </ul>
              <div class="card-body text-center">
                <a href="facebook.com" class="card-link">Fackbook</a>
                <a href="twitter.com" class="card-link">Twitter</a>
                <a href="instagram.com" class="card-link">Instagram</a>
              </div>
            </div>
          </div>

          <!-- my bids -->
          <div class="tab-pane fade" id="v-pills-home" role="tabpanel" aria-labelledby="v-pills-home-tab">
            <h5><b>MY BIDS</b></h5>
            <h6>BIDS DATABASE</h6>

            <nav class="navbar navbar-light bg-light float-right">
              <form class="form-inline">
